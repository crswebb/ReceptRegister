@model ReceptRegister.Frontend.Pages.Taxonomy.KeywordsModel
@{
    ViewData["Title"] = "Keywords";
}
<h1>Keywords</h1>
<form method="post" asp-page-handler="add" class="form-inline" novalidate>
    <label for="Name" class="visually-hidden">New Keyword</label>
    <input id="Name" name="Name" value="" placeholder="Add keyword" />
    <button type="submit" class="btn btn--primary btn--sm">Add</button>
</form>
<ul class="chip-list" role="list">
@foreach (var k in Model.Keywords) {
    <li class="chip" role="listitem">@k.Name <form method="post" asp-page-handler="delete" style="display:inline"><input type="hidden" name="Id" value="@k.Id" /><button class="remove" title="Delete keyword @k.Name" aria-label="Delete keyword @k.Name">Ã—</button></form></li>
}
</ul>
